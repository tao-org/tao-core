<assembly>
    <id>${project.version}</id>
    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tao-config/src/main/resources/ro/cs/tao/configuration</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../../tao-services/tao-services-startup/src/main/resources/config/spring.properties</source>
            <outputDirectory>config</outputDirectory>
            <destName>application.properties</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <excludes>
                <exclude>ro.cs.tao:tao-*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>modules</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>ro.cs.tao:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>