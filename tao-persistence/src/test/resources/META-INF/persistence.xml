<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="tao" transaction-type="RESOURCE_LOCAL">

        <mapping-file>META-INF/tao_orm.xml</mapping-file>

        <class>ro.cs.tao.eodata.Attribute</class>
        <class>ro.cs.tao.eodata.EOProduct</class>
        <class>ro.cs.tao.eodata.VectorData</class>

        <class>ro.cs.tao.topology.NodeDescription</class>
        <class>ro.cs.tao.topology.ServiceDescription</class>

        <class>ro.cs.tao.component.Variable</class>
        <class>ro.cs.tao.component.ParameterDescriptor</class>
        <class>ro.cs.tao.component.ParameterDependency</class>
        <class>ro.cs.tao.component.TemplateParameterDescriptor</class>
        <class>ro.cs.tao.component.ProcessingComponent</class>
        <class>ro.cs.tao.component.GroupComponent</class>
        <class>ro.cs.tao.component.WPSComponent</class>

        <class>ro.cs.tao.datasource.DataSourceComponent</class>
        <class>ro.cs.tao.datasource.DataSourceComponentGroup</class>

        <class>ro.cs.tao.execution.model.ExecutionJob</class>
        <class>ro.cs.tao.execution.model.ExecutionTask</class>
        <class>ro.cs.tao.execution.model.ExecutionGroup</class>

        <class>ro.cs.tao.component.SourceDescriptor</class>
        <class>ro.cs.tao.component.TargetDescriptor</class>

        <class>ro.cs.tao.messaging.Message</class>
        <class>ro.cs.tao.Tag</class>

        <class>ro.cs.tao.workflow.WorkflowDescriptor</class>
        <class>ro.cs.tao.workflow.WorkflowNodeDescriptor</class>
        <class>ro.cs.tao.workflow.WorkflowNodeGroupDescriptor</class>

        <class>ro.cs.tao.datasource.beans.Query</class>
        <class>ro.cs.tao.workspaces.Repository</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

    </persistence-unit>
</persistence>