      "description": "The satellite to search for."
    },
    {
      "name": "repository",
      "opt": "r",
      "longOpt": "repository",
      "cardinality": 1,
      "hint": "repository name",
      "valueSeparator": null,
      "required": true,
      "description": "The remote repository where the products will be searched."
    },
    {
      "name": "user",
      "opt": "u",
      "longOpt": "user",
      "cardinality": 1,
      "hint": "repository user",
      "valueSeparator": null,
