    {
      "name": "proxyUser",
      "opt": "pUser",
      "longOpt": "proxyUser",
      "cardinality": 1,
      "hint": "proxy user",
      "valueSeparator": null,
      "required": false,
      "description": "Proxy user. Don't use if the proxy doesn't require authentication."
    },
