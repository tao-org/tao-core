    {
      "name": "help",
      "opt": "h",
      "longOpt": "help",
      "cardinality": 2,
      "hint": "satellite [repository]",
      "valueSeparator": " ",
      "required": false,
      "description": "Display repository plugins. If repository is also given, displays the parameters supported by it"
    },
    {
      "name": "out",
      "opt": "o",
      "longOpt": "out",
      "cardinality": 1,
      "hint": "output path",
      "valueSeparator": null,
      "required": true,
      "description": "The path in which the products will be downloaded"
    },
    {
      "name": "satellite",
      "opt": "s",
      "longOpt": "satellite",
      "cardinality": 1,
      "hint": "satellite name",
      "valueSeparator": null,
      "required": true,
      "description": "The satellite to search for"
    },
    {
      "name": "repository",
      "opt": "r",
      "longOpt": "repository",
      "cardinality": 1,
      "hint": "repository name",
      "valueSeparator": null,
      "required": true,
      "description": "The remote repository where the products will be searched"
    },
    {
      "name": "user",
      "opt": "u",
      "longOpt": "user",
      "cardinality": 1,
      "hint": "repository user",
      "valueSeparator": null,
      "required": false,
      "description": "The user to login to the remote repository"
    },
    {
      "name": "password",
      "opt": "pwd",
      "longOpt": "password",
      "cardinality": 1,
      "hint": "repository password",
      "valueSeparator": null,
      "required": false,
      "description": "The password to login to the remote repository"
    },
    {
      "name": "page",
      "opt": "p",
      "longOpt": "page",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "The page number. Default is 1"
    },
    {
      "name": "pageSize",
      "opt": "ps",
      "longOpt": "pageSize",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "The page size. Default is 10"
    },
    {
      "name": "limit",
      "opt": "l",
      "longOpt": "limit",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "Maximum number of products. Default is 20"
    },
    {
      "name": "mode",
      "opt": "m",
      "longOpt": "mode",
      "cardinality": 1,
      "hint": "OVERWRITE|RESUME",
      "valueSeparator": null,
      "required": false,
      "description": "The mode of fetching the products. Default is OVERWRITE"
    },
    {
      "name": "parameters",
      "opt": "params",
      "longOpt": "parameters",
      "cardinality": -1,
      "hint": "<name1=value1 name2=value2 ...>",
      "valueSeparator": " ",
      "required": true,
      "description": "The values represent pairs of datasource parameter names and values, separated by spaces"
    },
    {
      "name": "query",
      "opt": "query",
      "longOpt": "queryOnly",
      "cardinality": 0,
      "hint": null,
      "valueSeparator": null,
      "required": false,
      "description": "Perform only the query and return the product names"
    },
