    {
      "name": "help",
      "opt": "h",
      "longOpt": "help",
      "cardinality": 2,
      "hint": "satellite [repository]",
      "valueSeparator": " ",
      "required": false,
      "description": "Display repository plugins. If repository is also given, displays the parameters supported by it."
    },
    {
      "name": "target",
      "opt": "t",
      "longOpt": "target",
      "cardinality": 1,
      "hint": "target folder",
      "valueSeparator": null,
      "required": true,
      "description": "The folder into which the products will be downloaded."
    },
    {
      "name": "satellite",
      "opt": "s",
      "longOpt": "satellite",
      "cardinality": 1,
      "hint": "satellite name",
      "valueSeparator": null,
