      "description": "The page number. Default is 1."
    },
    {
      "name": "pageSize",
      "opt": "ps",
      "longOpt": "pageSize",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "The page size. Default is 10."
    },
    {
      "name": "limit",
      "opt": "l",
      "longOpt": "limit",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "Maximum number of products. Default is 20."
    },
    {
      "name": "latestOnly",
      "opt": "latest",
      "longOpt": "latestOnly",
      "cardinality": 0,
      "hint": null,
      "valueSeparator": null,
      "required": false,
      "description": "Return only the most recent product."
    },
    {
      "name": "maxCoverage",
      "opt": "max",
      "longOpt": "maxCoverage",
      "cardinality": 0,
      "hint": null,
      "valueSeparator": null,
      "required": false,
      "description": "Return only the products that fully cover the given footprint."
    },
    {
      "name": "mode",
      "opt": "m",
      "longOpt": "mode",
      "cardinality": 1,
      "hint": "OVERWRITE|RESUME|COPY|SYMLINK",
      "valueSeparator": null,
      "required": false,
      "description": "The mode of fetching the products. Supported values are OVERWRITE (default), RESUME, COPY and SYMLINK."
    },
    {
      "name": "format",
      "opt": "f",
      "longOpt": "format",
      "cardinality": 1,
      "hint": "TEXT|JSON",
      "valueSeparator": null,
      "required": false,
      "description": "The format of the output query results. Supported values are TEXT (default) and JSON."
    },
    {
      "name": "timeout",
      "opt": "tout",
      "longOpt": "timeout",
      "cardinality": 1,
      "hint": "integer",
      "valueSeparator": null,
      "required": false,
      "description": "The time interval (in seconds) to wait for a response. Default is 30."
    },
    {
      "name": "parameters",
      "opt": "params",
      "longOpt": "parameters",
      "cardinality": -1,
      "hint": "<name1=value1 name2=value2 ...>",
      "valueSeparator": " ",
      "required": false,
      "description": "The values represent pairs of datasource parameter names and values, separated by spaces."
    },
    {
      "name": "query",
      "opt": "query",
      "longOpt": "queryOnly",
      "cardinality": 0,
      "hint": null,
      "valueSeparator": null,
